# Copy this file to .env and add your configuration

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=your_openai_base_url
OPENAI_MODEL=gpt-4o-realtime-preview-2024-10-01
OPENAI_VOICE=ballad
OPENAI_LANGUAGE=vi

# Server Configuration
SERVER_PORT=3000
SERVER_HOST=localhost

# Realtime API Configuration
REALTIME_URL=your_realtime_websocket_url
REALTIME_INSTRUCTIONS=Your AI assistant instructions here

# Turn Detection Configuration (Adjusted to prevent echo)
TURN_DETECTION_TYPE=server_vad
TURN_DETECTION_THRESHOLD=0.6
TURN_DETECTION_PREFIX_PADDING_MS=300
TURN_DETECTION_SILENCE_DURATION_MS=800

# Development Environment
NODE_ENV=development